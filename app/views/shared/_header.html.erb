<div class="contain-to-grid sticky" id="header">
  <nav class="top-bar" data-topbar role="navigation" data-options="sticky_on: large">
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to image_tag("bike_favicon_blue.png", size: '60'), :root %></h1>
      </li>
      <li class="has-form">
        <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
      </li>

    </ul>

    <section class="top-bar-section">
      <ul class="right">
      <% if signed_in? %>
        <li><%= link_to current_user.username, user_path(id: current_user.id) %></li>
        <li><%= link_to "Logout", session_path(id: current_user.id), method: :delete %></li>
      <% else %>
        <li><%= link_to "Sign Up", signup_path %></li>
        <li><%= link_to "Sign In", login_path %></li>
      <% end %>
    </ul>

    </section>
  </nav>
</div>
