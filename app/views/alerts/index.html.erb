<section class='block' id='alert-index-page'>
  <div id='alert-index-map' class='index_position_map'></div>
  <div class='centered'>
    <div id='current_user_lat' style="display: none;"><%= current_user.location.latitude %></div>
    <div id='current_user_lng' style="display: none;"><%= current_user.location.longitude %></div>
    <% @alerts.each do |alert| %>
      <div class='latitude' style="display: none;"><%=alert.location.latitude%></div>
      <div class='longitude' style="display: none;"><%=alert.location.longitude%></div>
    <% end %>
    <%= image_tag current_user.avatar_url, size: '60', class: 'avatar'%>
    <h2>Alerts in your area</h2>
    <% @alerts.each do |alert| %>
    <div class='row alert-listing'>
      <a href='/alerts/<%= alert.id %>'>
      <div class='small-12 small-centered columns'>
        <%= image_tag alert.creator.avatar_url, size: '50', class: 'avatar' %>
        <h4><%= alert.creator.full_name %></h4>
        <p><%= alert.description %></p>
        <%= image_tag 'location_icon.png', size: '22', class: 'location-icon' %>
      </div>
      </a>
    </div>
    <% end %>
  </div>
</section>
